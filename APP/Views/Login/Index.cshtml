@{
    Layout = null;
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Kontrol ParK | Login</title>
        <link href="~/Content/StyleSheet.css" rel="stylesheet">
        <link href="~/Content/bootstrap.min.css" rel="stylesheet">
        <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">
        <link href="~/Content/animate.css" rel="stylesheet">
        <link href="~/Content/style.css" rel="stylesheet">
        <link href="/Scripts/plugins/jquery-ui/jquery-ui.min.css" rel="stylesheet" type="text/css" />
    </head>
    <body class="gray-bg">
        <div class="middle-box text-center loginscreen  animated fadeInDown">
            <div>
                <div class="text-center">
                    <h1 class="logo-name">KP</h1>
                </div>
                <h3 style="color: ghostwhite;">KONTROL PARK
                <br><br>PLATEFORME DE SUIVI DU PARC AUTOMOBILE DE HM CONSULTING </h3>
                <form role="form" id="form" action="/Login/Connexion" method="post" class="m-t">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <input type="email" autocomplete="off" class="form-control" placeholder="Email" name="EmailUser" id="EmailUser">
                        </div>
                        <div class="form-group">
                            <input type="password" autocomplete="off" class="form-control" placeholder="Mot de passe" name="MotDePasse" id="MotDePasse">
                        </div>
                        @if (ViewBag.erreur != null)
                        {
                            <div class="alert alert-danger alert-dismissable">
                                <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                                @ViewBag.erreur.
                            </div>
                        }
                    </div>
                    @Html.Hidden("ReturnUrl", null, new { @value = @ViewBag.r })


                    <button type="submit" class="btn btn-primary block full-width m-b">S'authentifier</button>
                    <a href="#"><small>Mot de passe oublié?</small></a>
                </form>
                <p class="m-t"> <small style="color: mintcream;">Kontrol Park | HM Consulting &copy; 2017</small> </p>
            </div>
        </div>

        <script src="/Scripts/jquery-3.1.1.min.js"></script>
        @Scripts.Render("~/plugins/validate")

        <script type="text/javascript">
                $(document).ready(function () {
                    $("#form").validate({
                        rules: {
                            MotDePasse: {
                                required: true,
                            },
                            EmailUser: {
                                required: true,
                            }
                        }
                    });
                });
        </script>

    </body>
</html>