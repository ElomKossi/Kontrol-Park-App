@model APP.Areas.Affectation.Models.AllViewsModel
@using DAL;
@using System.Diagnostics

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_2.cshtml";
}


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="row">
            <div class="col-lg-offset-4 col-lg-4">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h3>Ajouter un type de carburant</h3>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        @using (Html.BeginForm("Ajouter", "TypeCarburants", new { area = "Affectation" }, FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            <div class="form-horizontal">
                                <div class="form-group">
                                    @*<label class="col-sm-4 control-label">ID</label>*@

                                    <div class="col-sm-8">
                                        <input type="hidden" id="IdTypeCarb" name="IdTypeCarb" class="form-control" placeholder="ID">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Libellé</label>

                                    <div class="col-sm-8">
                                        <input type="text" id="LibelleTypeCarb" name="LibelleTypeCarb" class="form-control" placeholder="Libellé">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-8 col-sm-offset-4">
                                    <button class="btn btn-white" type="reset">Annuler </button>
                                    <button class="btn btn-primary" type="submit">Ajouter </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-lg-offset-2 col-lg-8">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h3>Liste des types de carburant</h3>
                            <div class="ibox-tools">
                                <a class="collapse-link">
                                    <i class="fa fa-chevron-up"></i>
                                </a>
                                <a class="close-link">
                                    <i class="fa fa-times"></i>
                                </a>
                            </div>
                        </div>
                        <div class="ibox-content">
                            <input type="text" class="form-control input-sm m-b-xs" id="filter"
                                   placeholder="Search in table">
                            <table class="footable table table-stripped" data-page-size="8" data-filter=#filter>
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayName("ID")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Libellé")
                                        </th>
                                        <th class="text-right">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.typeCarburant.OrderByDescending(x => x.IdTypeCarb))
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IdTypeCarb)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LibelleTypeCarb)
                                            </td>
                                            <td class="text-right">
                                                <div class="btn-group">
                                                    <a class="btn btn-white btn-bitbucket" data-toggle="modal" data-target="#e-@Html.DisplayFor(modelItem => item.IdTypeCarb)">
                                                        Modifier
                                                    </a>
                                                    <a class="btn btn-white btn-bitbucket" data-toggle="modal" data-target="#dl-@Html.DisplayFor(modelItem => item.IdTypeCarb)">
                                                        Détail
                                                    </a>
                                                    @{
                                                        if (@item.Supprimer == false)
                                                        {
                                                            <a class="btn btn-white btn-bitbucket" href="/Affectation/TypeCarburants/Etat/@item.IdTypeCarb">
                                                                Supprimer
                                                            </a>
                                                        }
                                                        else
                                                        {
                                                            <a class="btn btn-white btn-bitbucket" href="/Affectation/TypeCarburants/Etat/@item.IdTypeCarb">
                                                                Restaurer
                                                            </a>
                                                        }
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    Debug.Assert(Model.typeCarburant != null, "Model.typeCarburant != null");
    foreach (var tmp in Model.typeCarburant)
    {
        <div class="modal inmodal fade" id="e-@tmp.IdTypeCarb" tabindex="@tmp.IdTypeCarb" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content animated bounceInRight">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                        <h4 class="modal-title">Modifier un type de carburant</h4>
                    </div>
                    @using (Html.BeginForm("Editer", "TypeCarburants", new { area = "Affectation" }, FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label class="col-sm-4 control-label">ID</label>

                                <div class="col-sm-8">
                                    <input type="text" id="IdTypeCarb" name="IdTypeCarb" class="form-control" value="@tmp.IdTypeCarb">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Libellé</label>

                                <div class="col-sm-8">
                                    <input type="text" id="LibelleTypeCarb" name="LibelleTypeCarb" class="form-control" value="@tmp.LibelleTypeCarb">
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-white" data-dismiss="modal">Fermer</button>
                            <button type="submit" class="btn btn-primary" value="Modifier">Modifier</button>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="modal inmodal fade" id="dl-@tmp.IdTypeCarb" tabindex="@tmp.IdTypeCarb" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content animated bounceInRight">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                        <h4 class="modal-title">Détail d'un type carburant</h4>
                    </div>
                    <form class="form-horizontal" action="/TypeCarburants/Editer" method="post">
                        <div class="modal-body">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">ID</label>

                                    <div class="col-sm-8">
                                        <input type="text" disabled="" id="IdTypeCarb" name="IdTypeCarb" class="form-control" value="@tmp.IdTypeCarb">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Libellé</label>

                                    <div class="col-sm-8">
                                        <input type="text" disabled="" id="LibelleTypeCarb" name="LibelleTypeCarb" class="form-control" value="@tmp.LibelleTypeCarb">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-white" data-dismiss="modal">Fermer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="modal inmodal fade" id="de-@tmp.IdTypeCarb" tabindex="@tmp.IdTypeCarb" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content animated bounceInRight">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                        <h4 class="modal-title">Supprimer un type de Carburant</h4>
                    </div>
                    @Html.HiddenFor(model => model.carburant)
                    <div class="modal-body">
                        <h3>Supprimer?</h3>
                        <div>
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayName("ID")
                                </dt>

                                <dd>
                                    @tmp.IdTypeCarb
                                </dd>
                                <dt>
                                    @Html.DisplayName("Libellé")
                                </dt>

                                <dd>
                                    @tmp.LibelleTypeCarb
                                </dd>
                            </dl>
                        </div>
                        @using (Html.BeginForm("Delete", "TypeCarburants", new { id = tmp.IdTypeCarb }, FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="modal-footer">
                                <button type="button" class="btn btn-white" data-dismiss="modal">Fermer</button>
                                <button type="submit" class="btn btn-primary" value="Ajouter">Supprimer</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
}


@section Scripts {
    @Scripts.Render("~/plugins/dataTables")

    @Scripts.Render("~/plugins/iCheck")

    @Scripts.Render("~/plugins/iCheck")
    @Scripts.Render("~/plugins/dataPicker")
    @Scripts.Render("~/plugins/ionRange")
    @Scripts.Render("~/plugins/nouiSlider")
    @Scripts.Render("~/plugins/jasnyBootstrap")
    @Scripts.Render("~/plugins/switchery")
    @Scripts.Render("~/plugins/chosen")
    @Scripts.Render("~/plugins/knob")
    @Scripts.Render("~/plugins/imagecropper")
    @Scripts.Render("~/plugins/colorpicker")
    @Scripts.Render("~/plugins/clockpicker")
    @Scripts.Render("~/plugins/dateRange")
    @Scripts.Render("~/plugins/select2")
    @Scripts.Render("~/plugins/touchSpin")
    @Scripts.Render("~/plugins/tagInputs")
    @Scripts.Render("~/plugins/duallist")
