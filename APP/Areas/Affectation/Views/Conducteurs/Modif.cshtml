@*@model IEnumerable <DAL.ConducteurPermis>*@
@model APP.Areas.Affectation.Models.AllViewsModel
@using DAL;
@using System.Diagnostics

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_2.cshtml";
}


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-offset-3 col-lg-6">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>
                        Modifier les infos d'un conducteurs
                    </h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    @using (Html.BeginForm("Modif", "Conducteurs", new { area = "Affectation" }, FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <div class="modal-body">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">ID</label>
                                    <div class="col-sm-8">
                                        <input type="text" id="IdConducteur" name="IdConducteur" class="form-control" value="@Model.cond.IdConducteur">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Numéro de la CNI</label>
                                    <div class="col-sm-8">
                                        <input type="text" value="@Model.cond.NumCNIConducteur" id="NumCNIConducteur" name="NumCNIConducteur" placeholder="Numéro de la CNI" class="form-control">
                                        @Html.ValidationMessage("NumCNIConducteur", "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Nom</label>
                                    <div class="col-sm-8">
                                        <input type="text" value="@Model.cond.NomConducteur" id="NomConducteur" name="NomConducteur" placeholder="Nom" class="form-control">
                                        @Html.ValidationMessage("NomConducteur", "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Prénoms</label>
                                    <div class="col-sm-8">
                                        <input type="text" value="@Model.cond.PrenomConducteur" id="PrenomConducteur" name="PrenomConducteur" placeholder="Prénoms" class="form-control">
                                        @Html.ValidationMessage("PrenomConducteur", "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Date de naissance</label>
                                    <div class="col-sm-8">
                                        <input type="text" value="@Model.cond.DateNaissanceConducteur" class="form-control" data-mask="99/99/9999" placeholder="" id="DateNaissanceConducteur" name="DateNaissanceConducteur">
                                        @Html.ValidationMessage("DateNaissanceConducteur", "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Lieux de naissance</label>
                                    <div class="col-sm-8">
                                        <input type="text" value="@Model.cond.LieuxNaissanceConducteur" id="LieuxNaissanceConducteur" name="LieuxNaissanceConducteur" placeholder="Lieux de naissance" class="form-control">
                                        @Html.ValidationMessage("LieuxNaissanceConducteur", "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Sexe</label>
                                    <div class="col-sm-8">
                                        <select value="@Model.cond.SexeConducteur" class="form-control m-b" name="SexeConducteur">
                                            <option value="Masculin">Masculin </option>
                                            <option value="Féminin">Féminin </option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Adresse</label>
                                    <div class="col-sm-8">
                                        <input type="text" value="@Model.cond.AdresseConducteur" id="AdresseConducteur" name="AdresseConducteur" placeholder="Adresse" class="form-control">
                                        @Html.ValidationMessage("AdresseConducteur", "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">E-mail</label>
                                    <div class="col-sm-8">
                                        <input type="email" value="@Model.cond.EmailConducteur" id="EmailConducteur" name="EmailConducteur" placeholder="E-mail" class="form-control">
                                        @Html.ValidationMessage("EmailConducteur", "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Téléphone</label>
                                    <div class="col-sm-8">
                                        <input type="tel" value="@Model.cond.TelConducteur" id="TelConducteur" name="TelConducteur" placeholder="Téléphone" class="form-control">
                                        @Html.ValidationMessage("TelConducteur", "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Date d'embauche</label>
                                    <div class="col-sm-8">
                                        <input type="text" value="@Model.cond.DateEmbaucheConducteur" class="form-control" data-mask="99/99/9999" placeholder="" id="DateEmbaucheConducteur" name="DateEmbaucheConducteur">
                                        @Html.ValidationMessage("DateEmbaucheConducteur", "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-white" data-dismiss="modal">Fermer</button>
                            <button type="submit" class="btn btn-primary" value="Modifier">Modifier</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
