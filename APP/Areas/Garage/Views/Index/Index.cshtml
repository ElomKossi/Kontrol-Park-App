@model APP.Areas.Garage.Models.AllViewsModel
@using DAL;
@using System.Diagnostics

@{
    ViewBag.Title = "Intervention";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="jumbotron">
                <h1>Kontrol Park</h1>
                <p>Page de gestion des interventions sur les véhicules et dans le garage</p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Véhicules </h5>
                    @{
                        if (Model.Vehicule == null)
                        {
                            <span class="label label-primary">0</span>
                        }
                        else
                        {
                            <span class="label label-primary">@Model.Vehicule.Count()</span>
                        }
                    }
                </div>
                <div class="ibox-content">
                    <p>L'utilisateur est chargé de créer modifier ou supprimer des véhicules tout en renseignant les caractéristiques de chaque véhicules.</p>
                </div>
                <div class="ibox-footer">
                    <a class="btn btn-primary btn-rounded" href="/Affectation/Vehicules/Index">Gérer les véhicules</a>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
