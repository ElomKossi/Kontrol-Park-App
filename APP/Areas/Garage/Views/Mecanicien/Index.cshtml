@model APP.Areas.Garage.Models.AllViewsModel
@using DAL;
@using System.Diagnostics

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_2.cshtml";
}

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="row">
            <div class="col-lg-offset-2 col-lg-8">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h2>Ajouter un mécanicien</h2>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        @using (Html.BeginForm("Ajouter", "Mecanicien", new { area = "Garage" }, FormMethod.Post, new { @class = "form-horizontal", @role = "form", @id = "form" }))
                        {
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <input type="hidden" id="IdMecanicien" name="IdMecanicien" placeholder="ID" class="form-control">
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-xs-5 control-label">Numéro de la CNI</label>
                                        <div class="col-xs-7">
                                            <input type="text" id="NumCNIMecanicien" name="NumCNIMecanicien" value="@Model.Meca.NumCNIMecanicien" placeholder="Numéro de la CNI" class="form-control">
                                            @Html.ValidationMessage("NumCNIMecanicien", "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-xs-5 control-label">Nom</label>
                                        <div class="col-xs-7">
                                            <input type="text" id="NomMecanicien" name="NomMecanicien" placeholder="Nom" value="@Model.Meca.NomMecanicien" class="form-control">
                                            @Html.ValidationMessage("NomMecanicien", "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-xs-5 control-label">Prénom</label>
                                        <div class="col-xs-7">
                                            <input type="text" id="PrenomMecanicien" name="PrenomMecanicien" value="@Model.Meca.PrenomMecanicien" placeholder="Prénoms" class="form-control">
                                            @Html.ValidationMessage("PrenomMecanicien", "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-xs-5 control-label">Date de naissance</label>
                                        <div class="col-xs-7">
                                            <input type="date" class="form-control" name="DateNaissanceMecanicien" value="@Convert.ToDateTime(Model.Meca.DateNaissanceMecanicien).ToString("yyyy-MM-dd")">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-xs-5 control-label">Lieux de naissance</label>
                                        <div class="col-xs-7">
                                            <input type="text" id="LieuxNaissanceMecanicien" name="LieuxNaissanceMecanicien" value="@Model.Meca.LieuxNaissanceMecanicien" placeholder="Lieux de naissance" class="form-control">
                                            @Html.ValidationMessage("LieuxNaissanceMecanicien", "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-xs-5 control-label">Sexe</label>
                                        <div class="col-xs-7">
                                            <select class="form-control" name="SexeMecanicien">
                                                @{
                                                    if (Model.Meca != null)
                                                    {
                                                        if (Model.Meca.SexeMecanicien == "Masculin")
                                                        {
                                                            <option selected value="Masculin">Masculin </option>
                                                            <option value="Féminin">Féminin </option>
                                                        }
                                                        else if (Model.Meca.SexeMecanicien == "Féminin")
                                                        {
                                                            <option value="Masculin">Masculin </option>
                                                            <option selected value="Féminin">Féminin </option>
                                                        }
                                                        else
                                                        {
                                                            <option value="Masculin">Masculin </option>
                                                            <option value="Féminin">Féminin </option>
                                                        }
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-xs-5 control-label">Adresse</label>
                                        <div class="col-sm-7">
                                            <input type="text" id="AdresseMecanicien" name="AdresseMecanicien" value="@Model.Meca.AdresseMecanicien" placeholder="Adresse" class="form-control">
                                            @Html.ValidationMessage("AdresseMecanicien", "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-xs-5 control-label">E-mail</label>
                                        <div class="col-xs-7">
                                            <input type="email" id="EmailMecanicien" name="EmailMecanicien" value="@Model.Meca.EmailMecanicien" placeholder="E-mail" class="form-control">
                                            @Html.ValidationMessage("EmailMecanicien", "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-xs-5 control-label">Téléphone</label>
                                        <div class="col-xs-7">
                                            <input type="tel" id="TelMecanicien" name="TelMecanicien" value="@Model.Meca.TelMecanicien" placeholder="Téléphone" class="form-control">
                                            @Html.ValidationMessage("TelMecanicien", "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-xs-5 control-label">Date d'embauche</label>
                                        <div class="col-xs-7">
                                            <input type="date" class="form-control" name="DateEmbaucheMecanicien" value="@Convert.ToDateTime(Model.Meca.DateEmbaucheMecanicien).ToString("yyyy-MM-dd")">
                                        </div>
                                    </div>
                                </div>
                                @if (ViewData["CompareAge"] != null)
                                {
                                    <div class="pull-right">
                                        <div class="alert alert-danger alert-dismissable">
                                            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                                            @ViewData["CompareAge"]
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="form-group">
                                <div class="col-sm-4 col-sm-offset-5">
                                    <button class="btn btn-white" type="reset">Annuler </button>
                                    <button class="btn btn-primary" type="submit">Ajouter </button>
                                </div>
                            </div>
                                                    }
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-offset-1 col-lg-10">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <a class="btn btn-primary btn-sm pull-right" href="@Url.Action("ExportListC", "Mecanicien")" target="_blank">
                            Imprimer
                        </a>
                        <h2>Liste des Mécaniciens</h2>
                    </div>
                    <div class="ibox-content">
                        <div class="col-lg-offset-7 col-lg-5">
                            <input type="text" class="form-control input-sm m-b-xs" id="filter" placeholder="Rechercher">
                        </div>
                        <table class="footable table table-stripped" data-page-size="8" data-filter=#filter>
                            <thead>
                                <tr>
                                    <th>
                                        Numéro de la CNI
                                    </th>
                                    <th>
                                        Nom & Prénoms
                                    </th>
                                    <th>
                                        Sexe
                                    </th>
                                    <th>Téléphone</th>
                                    <th class="text-right">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Mecanicien.OrderByDescending(x => x.IdMecanicien))
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NumCNIMecanicien)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NomMecanicien) @Html.DisplayFor(modelItem => item.PrenomMecanicien)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SexeMecanicien)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TelMecanicien)
                                        </td>
                                        <td class="text-right">
                                            <div class="btn-group">
                                                <button class="btn btn-white btn-xs" data-toggle="modal" data-target="#e-@Html.DisplayFor(modelItem => item.IdMecanicien)">
                                                    Modifier
                                                </button>
                                                <button class="btn btn-white btn-xs" data-toggle="modal" data-target="#dl-@Html.DisplayFor(modelItem => item.IdMecanicien)">
                                                    Détail
                                                </button>
                                                @{
                                                    if (item.EnActivite == false || item.EnActivite == null)
                                                    {
                                                        <a class="btn btn-white btn-xs" href="/Garage/Mecanicien/Etat/@item.IdMecanicien">
                                                            Remise en activité
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a class="btn btn-white btn-xs" href="/Garage/Mecanicien/Etat/@item.IdMecanicien">
                                                            Mise hors activité
                                                        </a>
                                                    }
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

