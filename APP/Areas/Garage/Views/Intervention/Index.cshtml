@model APP.Areas.Garage.Models.AllViewsModel
@using DAL;
@using System.Diagnostics

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_2.cshtml";
}

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="row">
            <div class="col-lg-offset-2 col-lg-8">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Ajouter une intervention</h5>
                    </div>
                    <div class="ibox-content">
                        @using (Html.BeginForm("Ajouter", "Intervention", new { area = "Garage" }, FormMethod.Post, new { @class = "form-horizontal", @role = "form", @id = "form" }))
                        {
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <input type="hidden" id="IdIntervention" name="IdIntervention" placeholder="ID" class="form-control">
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-xs-5 control-label">Type d'intervention</label>
                                        <div class="col-xs-7">
                                            <select class="select2_demo_3 form-control" name="IdTypeIntervention">
                                                <option></option>
                                                @{
                                                    foreach (var type in Model.typeIntervention)
                                                    {
                                                        if (Model.inter != null)
                                                        {
                                                            if (type.IdTypeIntervention == Model.inter.IdTypeIntervention)
                                                            {
                                                                <option selected value="@type.IdTypeIntervention">@type.LibelleTypeIntervention</option>
                                                            }
                                                            else
                                                            {
                                                                <option value="@type.IdTypeIntervention">@type.LibelleTypeIntervention</option>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <option value="@type.IdTypeIntervention">@type.LibelleTypeIntervention</option>
                                                        }
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-xs-5 control-label">Libellé</label>
                                        <div class="col-xs-7">
                                            <input type="text" id="LibelleIdIntervention" name="LibelleIdIntervention" value="@Model.inter.LibelleIdIntervention" placeholder="Libellé" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-xs-5 control-label">Date de début</label>
                                        <div class="col-xs-7">
                                            <input type="date" class="form-control" name="DateDebut" value="@Convert.ToDateTime(Model.inter.DateDebut).ToString("yyyy-MM-dd")">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-xs-5 control-label">Date de fin</label>
                                        <div class="col-xs-7">
                                            <input type="date" class="form-control" name="DateFin" value="@Convert.ToDateTime(Model.inter.DateFin).ToString("yyyy-MM-dd")">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-xs-5 control-label">Véhicule</label>
                                        <div class="col-xs-7">
                                            <select class="select2_demo_3 form-control" name="IdVehicule">
                                                <option></option>
                                                @{
                                                    foreach (var type in Model.Vehicule)
                                                    {
                                                        if (Model.inter != null)
                                                        {
                                                            if (type.IdVehicule == Model.inter.IdVehicule)
                                                            {
                                                                <option selected value="@type.IdVehicule">
                                                                    @type.MarqueVehicule.LibelleMarque @type.NomVehicule @type.Immatriculation
                                                                </option>
                                                            }
                                                            else
                                                            {
                                                                <option value="@type.IdVehicule">
                                                                    @type.MarqueVehicule.LibelleMarque @type.NomVehicule @type.Immatriculation
                                                                </option>
                                                                }
                                                        }
                                                        else
                                                        {
                                                            <option value="@type.IdVehicule">
                                                                @type.MarqueVehicule.LibelleMarque @type.NomVehicule @type.Immatriculation
                                                            </option>
                                                        }
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-xs-5 control-label">Mecanicien</label>
                                        <div class="col-xs-7">
                                            <select data-placeholder="Choisir un mécanicien" class="chosen-select" name="IdMecanicien" tabindex="4">
                                                @{
                                                    foreach (var type in Model.Mecanicien)
                                                    {
                                                        if (Model.IdMeca != 0)
                                                        {
                                                            if (type.IdMecanicien == Model.IdMeca)
                                                            {
                                                                <option selected value="@type.IdMecanicien">
                                                                    @type.NomMecanicien @type.PrenomMecanicien
                                                                </option>
                                                            }
                                                            else
                                                            {
                                                                <option value="@type.IdMecanicien">
                                                                    @type.NomMecanicien @type.PrenomMecanicien
                                                                </option>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <option value="@type.IdMecanicien">
                                                                @type.NomMecanicien @type.PrenomMecanicien
                                                            </option>
                                                        }
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-xs-5 control-label">Pièces utilisées</label>
                                        <div class="col-xs-7">
                                            <select data-placeholder="Choisir une pièce" class="chosen-select" multiple name="IdPiece" tabindex="4">
                                                @{
                                                    foreach (var type in Model.piece)
                                                    {
                                                        if (Model.IdPiece != null)
                                                        {
                                                            foreach (var i in Model.IdPiece)
                                                            {
                                                                if (type.IdPiece == i)
                                                                {
                                                                    <option selected value="@type.IdPiece">@type.LibellePiece</option>
                                                                }
                                                                else
                                                                {
                                                                    <option value="@type.IdPiece">@type.LibellePiece</option>
                                                                }
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <option value="@type.IdPiece">@type.LibellePiece</option>
                                                        }
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    @if (ViewData["Compare"] != null)
                                    {
                                        <div class="pull-right">
                                            <div class="alert alert-danger alert-dismissable">
                                                <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                                                @ViewData["Compare"]
                                            </div>
                                        </div>
                                    }
                                    <div class="form-group">
                                        <label class="col-xs-5 control-label">Description</label>
                                        <div class="col-xs-7">
