                                    <button class="btn btn-primary" type="submit">Ajouter </button>
                                </div>
                            </div>
                                                    }
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-offset-1 col-lg-10">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <a class="btn btn-primary btn-sm pull-right" href="@Url.Action("ExportListC", "Intervention")" target="_blank">
                            Imprimer
                        </a>
                        <h2>Liste des intervention</h2>
                    </div>
                    <div class="ibox-content">
                        <div class="col-lg-offset-7 col-lg-5">
                            <input type="text" class="form-control input-sm m-b-xs" id="filter"
                                   placeholder="Rechercher">
                        </div>
                        <table class="footable table table-stripped" data-page-size="8" data-filter=#filter>
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayName("ID")
                                    </th>
                                    <th>
                                        Libellé 
                                    </th>
                                    <th>
                                        Véhicule
                                    </th>
                                    <th>
                                        Mécanicien
                                    </th>
                                    <th>
                                        Durée
                                    </th>
                                    <th class="text-right">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.intervention.OrderByDescending(x => x.IdIntervention))
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IdIntervention)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LibelleIdIntervention)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Vehicule.MarqueVehicule.LibelleMarque) @Html.DisplayFor(modelItem => item.Vehicule.NomVehicule) @Html.DisplayFor(modelItem => item.Vehicule.Immatriculation)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MecaIntervention.FirstOrDefault(j => j.IdIntervention == item.IdIntervention).Mecanicien.NomMecanicien) @Html.DisplayFor(modelItem => item.MecaIntervention.FirstOrDefault(j => j.IdIntervention == item.IdIntervention).Mecanicien.PrenomMecanicien)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DateDebut) - @Html.DisplayFor(modelItem => item.DateFin) 
                                        </td>
                                        <td class="text-right">
                                            <div class="btn-group">
                                                <button class="btn btn-white btn-xs" data-toggle="modal" data-target="#e-@Html.DisplayFor(modelItem => item.IdIntervention)">
                                                    Modifier
                                                </button>
                                                <button class="btn btn-white btn-xs" data-toggle="modal" data-target="#dl-@Html.DisplayFor(modelItem => item.IdIntervention)">
                                                    Détail
                                                </button>
                                                @{
                                                    if (item.Supprimer == false || item.Supprimer == null)
                                                    {
                                                        <a class="btn btn-white btn-xs" href="/Garage/Intervention/Etat/@item.IdIntervention">
                                                            Supprimer
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a class="btn btn-white btn-xs" href="/Garage/Intervention/Etat/@item.IdIntervention">
                                                            Restaurer
                                                        </a>
                                                    }
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                                    }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="10">
                                        <ul class="pagination pull-right"></ul>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

