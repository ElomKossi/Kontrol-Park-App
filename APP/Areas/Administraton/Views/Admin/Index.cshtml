                                    </th>
                                    <th class="text-right">
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.utilisateur.OrderByDescending(x => x.IdUser))
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdUser)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NomUser) @Html.DisplayFor(modelItem => item.PrenomUser)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Identifiant)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Profil.LibelleProfil)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EmailUser)
                                    </td>
                                    <td class="text-right">
                                        <div class="btn-group">
                                            <button class="btn btn-white btn-xs" data-toggle="modal" data-target="#e-@Html.DisplayFor(modelItem => item.IdUser)">
                                                Modifier
                                            </button>
                                            <button class="btn btn-white btn-xs" data-toggle="modal" data-target="#dl-@Html.DisplayFor(modelItem => item.IdUser)">
                                                Détail
                                            </button>
                                            @{
                                                    if (item.EnActivite == false || item.EnActivite == null)
                                                    {
                                                <a class="btn btn-white btn-xs" href="/Administraton/Admin/Delete/@item.IdUser">
                                                    Débloquer
                                                </a>
                                                    }
                                                    else
                                                    {
                                                <a class="btn btn-white btn-xs" href="/Administraton/Admin/Delete/@item.IdUser">
                                                    Bloquer
                                                </a>
                                                    }
                                            }
                                        </div>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
</div>

